{
	"compilerOptions": {

		"target": "es5" ,
		"module": "commonjs" ,
		"outDir": "./build",
	
		"strict": true, 
	
		"moduleResolution": "node",

		"paths": {
			"@jsm/*": ["./node_modules/three/examples/jsm/*"],
			"@jsm/libs/dat.gui.module.js": ["./node_modules/@types/dat.gui"],
		},

		// "allowSyntheticDefaultImports": true,      
		"esModuleInterop": true, 

		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},

	"include": ["src"],
	"exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
